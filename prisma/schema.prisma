generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id String @id @default(cuid())
  userId String 
  expiresAt DateTime 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  username  String    @unique
  password   String
  profileImage      String?
  bio       String?
  firstName  String
  lastName   String
  userInfo UserInfo?

  recipe     Recipe[]

  // Relationship fields
  followers  Follows[]  @relation("following") // Tracks users who follow this user
  following  Follows[] @relation("follower") // Tracks users this user follows

  session Session[]

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Follows {
  id           String   @id @default(cuid())
  
  // The user being followed
  user         User     @relation("following", fields: [userId], references: [id])
  userId       String

  // The user who is following
  follower     User     @relation("follower", fields: [followerId], references: [id])
  followerId   String

  isActive     Boolean  @default(true) // Tracks if the relationship is active
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UserInfo {
  id        String     @id @default(cuid())
  birthDate DateTime
  weight    Float
  height    Float
  user      User       @relation(fields: [userId], references: [id])
  userId    String     @unique

  // this serves as the user's monthly budget to filter the recipe
  monthyBudget Float

  // user's allergies (similar to tag/search filtering)
  allergies Allergies[]
}

model Allergies {
  id         String   @id @default(cuid())
  name       String
  userInfo   UserInfo @relation(fields: [userInfoId], references: [id])
  userInfoId String
}

model Recipe {
  id        String   @id @default(cuid())
  title     String
  
  recipeImage RecipeImage[]
  
  // suggestion, make this an array of strings with the SRP, then add a logic to calculate the total SRP for the recipe
  ingredients Ingredients[]

  procedure String
  
  Calories Float
  Protein Float
  Carbs Float
  Fat Float
  Fiber Float
  Sugar Float
  Sodium Float
  Potassium Float
  VitaminC Float
  VitaminA Float
  Calcium Float
  Iron Float


  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Ingredients {
  id        String   @id @default(cuid())
  name      String
  recipeId  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
  srp       Float
}

model RecipeImage {
  id        String   @id @default(cuid())
  img       String
  recipeId  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
}
